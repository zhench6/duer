<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播报一条消息"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/sigle_line_input"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:hint="输入要播报的内容"
            android:text="您好，欢迎试用百度语音合成系统。欢迎提出您的建议。"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/playBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playSingeLine"
            android:text="播报"/>
        <Button
            android:id="@+id/stopBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连续播报多条消息"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/multi_line_input_1"
            android:layout_width="match_parent"
            android:hint="content1"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/multi_line_input_2"
            android:layout_width="match_parent"
            android:hint="content2"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/multi_line_input_3"
            android:layout_width="match_parent"
            android:hint="content3"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/multi_line_input_4"
            android:layout_width="match_parent"
            android:hint="content4"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/playMultiBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="playMultiLine"
            android:text="播报"/>

    </LinearLayout>

</LinearLayout>
