<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_voice_recognition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.baidu.duersdkdemo.voicerecognition.VoiceRecognitionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/voice_touchmode_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="语音识别-touch模式"/>

        <Button
            android:id="@+id/voice_vadmode_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="语音识别-vad模式"/>

        <Button
            android:id="@+id/voice_filemode_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="语音识别-（pcm流方式）"/>

        <Button
            android:id="@+id/voice_wakePcm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="wakeupPcm"
            android:layout_alignParentBottom="true"
            android:text="流语音唤醒"/>

    </LinearLayout>

</RelativeLayout>
